@model LeaveAllocationEditVM

@{
    ViewData["Title"] = "Edit Allocation";
}

<h1>Edit @Model.LeaveType.Name Allocation for @Model.Employee.FirstName @Model.Employee.LastName</h1>

<hr/>
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditAllocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="LeaveTypeId" />
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Peroid" class="control-label"></label>
                <input asp-for="Peroid" class="form-control" />
                <span asp-validation-for="Peroid" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

